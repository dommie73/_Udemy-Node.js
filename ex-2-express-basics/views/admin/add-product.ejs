<%- include('../partials/head', { styles: ['product-form'] }); -%>

<form
	autocomplete="off"
	class="product-form"
	action="/admin/add-product"
	method="POST"
>
	<h1 class="product-form__title">Add Product</h1>
	<div class="product-form-group">
		<label class="product-form-group__label" for="name">Name</label>
		<input
			class="product-form-group__input"
			id="name"
			name="name"
			type="text"
		/>
	</div>
	<div class="product-form-group">
		<label class="product-form-group__label" for="imageurl">Image URL</label>
		<input
			class="product-form-group__input"
			id="imageurl"
			name="imageurl"
			type="text"
		/>
	</div>
	<div class="product-form-group">
		<label class="product-form-group__label" for="price">Price</label>
		<input
			class="product-form-group__input"
			id="price"
			min="0"
			name="price"
			step="0.01"
			type="number"
		/>
	</div>
	<div class="product-form-group product-form-group--vertical">
		<label class="product-form-group__label" for="desc">Description</label>
		<textarea
			class="product-form-group__textarea"
			id="desc"
			name="desc"
			rows="7"
		></textarea>
	</div>
	<button class="button" type="submit">Add Product</button>
</form>

<%- include('../partials/end'); -%>
