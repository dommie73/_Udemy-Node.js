<%- include('../partials/head', { styles: ['form'] }); -%>

<form
	autocomplete="off"
	class="form"
	action="/signup"
	method="POST"
>
	<h1 class="main-heading">
		Sign Up
	</h1>
	<div class="form-group form-group--vertical">
		<label class="form-group__label" for="email">Email</label>
		<input
			class="form-group__input"
			id="email"
			name="email"
			type="text"
			value="<%= inputs && inputs.email %>"
		/>
	</div>
	<div class="form-group form-group--vertical">
		<label class="form-group__label" for="password">Password</label>
		<input
			class="form-group__input"
			id="password"
			name="password"
			type="password"
		/>
  </div>
  <div class="form-group form-group--vertical">
		<label class="form-group__label" for="confirmPassword">Confirm Password</label>
		<input
			class="form-group__input"
			id="confirmPassword"
			name="confirmPassword"
			type="password"
		/>
	</div>
	<%- include('../partials/csrf'); -%>
	<button class="button" type="submit">
		Sign Up
	</button>
</form>

<%- include('../partials/end'); -%>
