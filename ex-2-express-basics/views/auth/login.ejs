<%- include('../partials/head', { styles: ['form'] }); -%>

<form
	autocomplete="off"
	class="form"
	action="/login"
	method="POST"
>
	<h1 class="main-heading">
		Login
	</h1>
	<%- include('../partials/form-inputs', { 
		fields: [ 
			{
				id: 'email', 
				label: 'Email', 
				name: 'email',	
				type: 'text'
			},
			{
				id: 'password',
				label: 'Password',
				name: 'password',
				type: 'password'
			}
		]
	}); -%>
	<%- include('../partials/csrf'); -%>
	<button class="button" type="submit">
		Login
	</button>
</form>
<a href="/reset">Forgot password?</a>


<%- include('../partials/end'); -%>
