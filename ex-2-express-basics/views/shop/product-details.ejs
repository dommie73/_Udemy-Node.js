<%- include('../partials/head', { styles: ['products'] }); -%>

<div>
	<% if (product) { %>
	<article class="product product--detailed">
		<h1 class="product__name main-heading"><%= product.name %></h1>
		<div class="product__price">
			<span class="currency">$</span>
			<span><%= product.price %></span>
		</div>
		<div class="product__image-wrapper">
			<img
				class="product__image"
				alt="<%= product.name %>"
				src="<%= product.imageUrl %>"
			/>
		</div>
		<p class="product__description"><%= product.description %></p>
		<div class="product__actions">
			<%- include('../partials/add-to-cart'); -%>
		</div>
	</article>
	<% } else { %>
	<h1 class="main-heading">Ooops!</h1>
	<p>
		We couldn't process your request :c The link you followed is broken or the
		product has been removed.
	</p>
	<p>
		How about checking other products in our shop?
	</p>
	<a href="/products" class="button">Go to Products</a>
	<% } %>
</div>

<%- include('../partials/end'); -%>
